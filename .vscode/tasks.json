{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: g++-15 build active file",
            "type": "shell",
            "command": "g++-15",
            "args": [
                "-std=c++20",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
